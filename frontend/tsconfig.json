{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
        "module": "es2015",
        "target": "es2015",
        "jsx": "react",
        "allowJs": true,
        "typeRoots" : ["node_modules/@types", "./src/@types"]
    },
    "include": [
        "src/*",
        "src/**/*"
    ],
    "exclude": [
      "node_modules",
      ".npm"
    ]
}